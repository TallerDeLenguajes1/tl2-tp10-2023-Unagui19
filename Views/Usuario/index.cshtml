@{
    ViewData["Title"] = "Home Page";
}
@model List<Usuario>
    <h2>LISTA DE USUARIOS</h2>

    <table class="table table-dark">
        <thead>
            <tr>
                <th hidden>ID</th>
                <th>Nombre</th>
                <th>Rol</th>
                @* <th></th> *@
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td hidden>@usuario.Id</td>
                    <td>@usuario.NombreDeUsuario</td>
                    <td>@usuario.Rol</td>
                    <td>
                    <a asp-controller="Usuario" asp-action="ModificarUsuario" asp-route-idUsuario="@usuario.Id">Modificar</a>
                    <a asp-controller="Usuario" asp-action="EliminarUsuario" asp-route-idUsuario="@usuario.Id" onclick="return confirm('Â¿Estas seguro que quieres eliminar el elemento?')">Eliminar</a>
                    </td> 
                </tr>
 
            }
        </tbody>
    </table>

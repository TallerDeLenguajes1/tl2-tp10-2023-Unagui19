@model Usuario
<form asp-controller="Usuario" asp-action="ModificarUsuario">
    <input hidden asp-for="@Model.Id">
    <div class="form-group">
        <label asp-for="@Model.NombreDeUsuario">Nombre de usuario: </label>
        <input asp-for="@Model.NombreDeUsuario" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Rol">Rol: </label>
        <input asp-for="@Model.Rol" class="form-control" />
    </div>
    <input type="submit" class="btn btn-primary">@*Enviar</input>*@
</form>
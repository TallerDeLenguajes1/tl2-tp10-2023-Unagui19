@{
    ViewData["Title"] = "Crear Usuario";
}
@using tl2_tp10_2023_Unagui19.ViewModels
@model CrearUsuarioViewModel
    
<form asp-controller="Usuario" asp-action="CrearUsuario">
    <div class="form-group">
        <label asp-for="@Model.NombreDeUsuario"></label>
        <input asp-for="@Model.NombreDeUsuario" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Rol"></label>
        <input asp-for="@Model.Rol" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Contrasenia"></label>
        <input asp-for="@Model.Contrasenia" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
@section Scripts { <partial name="_ValidationScriptsPartial" /> } 

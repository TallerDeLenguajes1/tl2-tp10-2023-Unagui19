@{
    ViewData["Title"] = "Crear Tarea";
}
@using tl2_tp10_2023_Unagui19.ViewModels 
@model CrearTareaViewModel
    
<form asp-controller="Tarea" asp-action="CrearTarea">
    <div class="form-group">
        <label asp-for="@Model.Nombre">Nombre de Tarea: </label>
        <input asp-for="@Model.Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.IdTablero">Id de Tablero asociado: </label>
        <input asp-for="@Model.IdTablero" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Estado">Estado de la tarea: </label>
        <input asp-for="@Model.Estado" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Descripcion">Descripcion: </label>
        <input asp-for="@Model.Descripcion" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Color">Color : </label>
        <input asp-for="@Model.Color" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.IdUsuarioAsignado">Id de Usuario asignado a la tarea : </label>
        <input asp-for="@Model.IdUsuarioAsignado" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>


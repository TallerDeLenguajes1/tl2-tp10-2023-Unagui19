@{
    ViewData["Title"] = "Home Page";
}
@using tl2_tp10_2023_Unagui19.ViewModels
@model List<IndexTareaViewModel>
    <h2>Lista de Tareas</h2>

    <table class="table table-dark">
        <thead>
            <tr>
                <th hidden>ID</th>
                <th>Nombre</th>
                <th>Id de tablero asociado</th>
                <th>Estado</th>
                <th>Descripcion</th>
                <th>Color</th>
                <th>Id de Usuario asignado</th>
                @* <th></th> *@
            </tr>
        </thead>
        <tbody>
            @foreach (var tarea in Model)
            {
                <tr>
                    <td hidden>@tarea.Id</td>
                    <td>@tarea.Nombre</td>
                    <td>@tarea.IdTablero</td>
                    <td>@tarea.Estado</td>
                    <td>@tarea.Descripcion</td>
                    <td>@tarea.Color</td>
                    <td>@tarea.IdUsuarioAsignado</td>
                    <td>
                    <a asp-controller="Tarea" asp-action="ModificarTarea" asp-route-idTarea="@tarea.Id">Modificar</a>
                    <a asp-controller="Tarea" asp-action="EliminarTarea" asp-route-idTarea="@tarea.Id" onclick="return confirm('Â¿Estas seguro que quieres eliminar el elemento?')">Eliminar</a>
                    </td> 
                </tr>
 
            }
        </tbody>
    </table>

@using tl2_tp10_2023_Unagui19.ViewModels
@model ModificarTableroViewModel
<form asp-controller="Tablero" asp-action="ModificarTablero">
    <input hidden asp-for="@Model.Id">
    <div class="form-group">
        <label asp-for="@Model.IdUsuarioPropietario">Id Usuario Propietario: </label>
        <input asp-for="@Model.IdUsuarioPropietario" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Nombre">Nombre de Tablero: </label>
        <input asp-for="@Model.Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Descripcion">Descripcion del tablero: </label>
        <input asp-for="@Model.Descripcion" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
@section Scripts { <partial name="_ValidationScriptsPartial" /> } 
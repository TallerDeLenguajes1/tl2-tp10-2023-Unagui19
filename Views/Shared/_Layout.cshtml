@using Taller2_TP10.Controllers
@{
    bool SesionActiva = string.IsNullOrEmpty(this.ViewContext.HttpContext.Session.GetString("Rol")); 
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestor de Tareas </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Taller2_TP10.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid " style="align-items: flex-start;" >
                <h3 class="navbar-brand" >Kanban</h3>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                    @if (!SesionActiva){
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1 " >
                            <li class="nav-item border border-primary rounded">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Index"><strong>Listado de Usuarios</strong></a>
                            </li>
                            <li class="nav-item border border-secondary rounded">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Tablero" asp-action="Index" > <strong>Listado de Tableros</strong></a>
                            </li>
                            <li class="nav-item border border-warning rounded">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Tarea" asp-action="Index"><strong>Listado de Tareas</strong></a>
                            </li>

                            <li class="nav-item border border-danger rounded">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="CerrarSesion" onclick="return confirm('¿Seguro que quieres salir de la sesion?')"><strong>Cerrar Sesion</strong></a>
                            </li>
                        </ul>
                    </div>
                    }
                
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Taller de Lenguaje 2 - Proyecto Final 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

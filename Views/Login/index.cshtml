@{
    ViewData["Title"] = "Login";
    string Title = "Login";
}
@using Taller2_TP10.ViewModels;
@model LoginViewModel;   


@if (!string.IsNullOrEmpty(TempData["usuInvalido"] as string))
{
    <div class="alert alert-info">@TempData["usuInvalido"]</div>
}

<h2>@Title</h2>

<form asp-controller="Login" asp-action="IniciarSesion" method="post" class="border border-primary p-3">
    <div class="mb-3">
        <label asp-for="@Model.Nombre" class="form-label">Nombre de usuario</label>
        <input asp-for="@Model.Nombre" type="text" class="form-control border border-primary" placeholder="Ejemplo: Franco">
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>  
    </div>

 @* Para contraseña *@

    <div class="mb-3">
        <label asp-for="@Model.Contrasenia" class="form-label">Contraseña</label>
        <input asp-for="@Model.Contrasenia" type="password" class="form-control border border-primary" aria-describedby="passwordHelpInline">
        <span id="passwordHelpInline" class="form-text">De 4 a 12 caracteres.</span>
        <span asp-validation-for="@Model.Contrasenia" class="text-danger"></span>  
    </div> @*Fin de contraseña*@
    <button type="submit" class="btn btn-primary">Ingresar</button>

</form>

